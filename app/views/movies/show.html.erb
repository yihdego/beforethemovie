<p id="notice"><%= notice %></p>

<h1><%= link_to 'Movies', movies_path %></h1>

<h2><%= @movie.title %></h2>

<%= @movie.summary %>
<%= @movie.release %>

<h3><%= link_to "Add to a Universe", add_universe_url %></h3>

<h3>Trailers</h3>
<%= render partial: 'video', collection: @videos, as: :video %>

<h3>Add Trailer</h3>
<ziggeo ziggeo-limit="60"
        ziggeo-width="320"
        ziggeo-height="240"
        ziggeo-perms="allowupload"
        ziggeo-tags="<%= @movie.id %>"></ziggeo>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
